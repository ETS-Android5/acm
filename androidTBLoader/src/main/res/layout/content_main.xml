<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context="org.literacybridge.androidtbloader.signin.SigninActivity">

    <!-- Greeting -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_greeting_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="3dp"
            android:text="@string/main_greeting_label"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/main_greeting_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/main_greeting_label"
            android:text="Friend!"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/main_greeting_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_greeting_label"
            android:text="email@example.com"
            android:textSize="10sp"/>

    </RelativeLayout>


    <!-- Manage Content Updates -->

    <RelativeLayout
        android:id="@+id/main_manage_content_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/main_manage_content_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="#fff"
            android:scaleType="centerCrop"
            android:src="?android:attr/actionModeShareDrawable"
            app:srcCompat="?android:attr/actionModeShareDrawable"/>

        <TextView
            android:id="@+id/main_manage_content_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/main_manage_content_button"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:text="Manage Content"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            tools:text="Manage Content"/>
    </RelativeLayout>

    <!-- Check-In -->

    <RelativeLayout
        android:id="@+id/main_checkin_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_manage_content_group"
        android:layout_margin="20dp"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/main_checkin_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="#fff"
            android:scaleType="centerCrop"
            android:src="@drawable/pin"
            app:srcCompat="@drawable/pin"/>

        <TextView
            android:id="@+id/main_checkin_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/main_checkin_button"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:text="Check In"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            tools:text="Check In"/>
    </RelativeLayout>

    <!-- Update Talking Books -->

    <RelativeLayout
        android:id="@+id/main_update_talking_books_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_checkin_group"
        android:layout_margin="20dp"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/main_update_talking_books_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="#fff"
            android:scaleType="fitCenter"
            android:src="@drawable/talking_book"
            app:srcCompat="@drawable/talking_book"/>

        <TextView
            android:id="@+id/main_update_talking_books_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/main_update_talking_books_button"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:text="Update Talking Books"
            android:textAlignment="viewEnd"
            android:textSize="18sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_update_talking_books_group"
        android:layout_margin="20dp"
        android:layout_marginTop="64dp"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_count_uploads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/main_no_stats_files_to_upload"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/main_size_uploads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:visibility="gone"/>

    </LinearLayout>


</RelativeLayout>
