<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              style="@android:style/Widget.Material.ProgressBar.Large">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
        android:text="Updating Talking Book"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/material_deep_teal_500"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/fragment_tb_update_deployment_info"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        tools:text="Deployment: 2016-13-b\nCommunity: Jirapa"
        android:textAlignment="center"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:indeterminate="true"
        android:layout_marginTop="60dp"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/update_talking_book_progress_bar"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:progress="0"
        android:max="100"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/update_talking_book_status_text_view"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="80dp"
        android:textColor="@color/material_deep_teal_500"/>
</LinearLayout>