<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_material_dark"
        android:id="@+id/connection_status_layout"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/connection_status_talking_book"
            android:text="No Talking Book connected"
            android:background="@color/background_material_dark"
            android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse"
            android:textSize="15dp"
            android:checked="false"
            android:singleLine="true"
            android:clickable="false"
            android:textColor="@color/material_grey_600"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/connection_status_dropbox"
            android:text="Connected to Dropbox: michael@literacybridge.org"
            android:background="@color/background_material_dark"
            android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse"
            android:textSize="15dp"
            android:checked="true"
            android:singleLine="true"
            android:clickable="false"
            android:textColor="@color/material_deep_teal_200"/>
    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/deployment_package_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/connection_status_layout">
        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>